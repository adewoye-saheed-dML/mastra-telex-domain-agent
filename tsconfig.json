{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    
    // "allowImportingTsExtensions": true, <-- THIS MUST BE REMOVED/ABSENT

    "forceConsistentCasingInFileNames": true,
    "noEmit": false,           
    "outDir": "./dist",        
    "rootDir": "./src/mastra", 
    "resolveJsonModule": true
  },
  "include": ["src/mastra/**/*.ts"],
  "exclude": ["node_modules"]
}